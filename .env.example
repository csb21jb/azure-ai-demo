# Azure OpenAI Configuration
AZURE_OPENAI_ENDPOINT=https://your-resource-name.openai.azure.com/
AZURE_OPENAI_API_KEY=your-azure-openai-api-key-here
AZURE_OPENAI_DEPLOYMENT_NAME=gpt-4o
AZURE_OPENAI_API_VERSION=2024-05-01-preview

# Azure Computer Vision Configuration
AZURE_VISION_ENDPOINT=https://your-resource-name.cognitiveservices.azure.com/
AZURE_VISION_API_KEY=your-api-key-here

# Azure Speech Services Configuration (try using same credentials as OpenAI)
AZURE_SPEECH_ENDPOINT=https://eastus2.api.cognitive.microsoft.com/
AZURE_SPEECH_API_KEY=your-azure-speech-api-key-here
AZURE_SPEECH_REGION=eastus2

# Azure OpenAI Realtime API Configuration (for Realtime Speech/Audio)
AZURE_OPENAI_REALTIME_ENDPOINT=https://your-resource-name.openai.azure.com/
AZURE_OPENAI_REALTIME_API_KEY=your-azure-openai-realtime-api-key-here
AZURE_OPENAI_REALTIME_DEPLOYMENT_NAME=gpt-realtime
AZURE_OPENAI_REALTIME_API_VERSION=2025-08-28

# Azure Language Services Configuration
AZURE_LANGUAGE_ENDPOINT=https://your-resource-name.cognitiveservices.azure.com/
AZURE_LANGUAGE_API_KEY=your-api-key-here

# Azure Translator Configuration
AZURE_TRANSLATOR_ENDPOINT=https://eastus.api.cognitive.microsoft.com
AZURE_TRANSLATOR_TEXT_ENDPOINT=https://api.cognitive.microsofttranslator.com
AZURE_TRANSLATOR_API_KEY=your-azure-translator-api-key-here
AZURE_TRANSLATOR_REGION=eastus

# Azure Storage Configuration
AZURE_STORAGE_ACCOUNT_NAME=your-storage-account-name
AZURE_STORAGE_ACCOUNT_KEY=your-storage-account-key-here
DOCUMENT_SOURCE_CONTAINER=document-source
DOCUMENT_TARGET_CONTAINER=document-target

# Security Configuration
USE_MANAGED_IDENTITY=false
SAS_TOKEN_EXPIRY_HOURS=1
MAX_FILE_SIZE_MB=100

# Azure Content Safety Configuration
AZURE_CONTENT_SAFETY_ENDPOINT=https://your-resource-name.cognitiveservices.azure.com/
AZURE_CONTENT_SAFETY_API_KEY=your-api-key-here

# Azure OpenAI Image Generation (DALL-E 3) Configuration
AZURE_OPENAI_IMAGE_ENDPOINT=https://your-resource-name.azure.com/openai/deployments/dall-e-3/images/generations?api-version=2024-04-01-preview
AZURE_OPENAI_IMAGE_API_KEY=your-azure-openai-image-api-key-here
AZURE_OPENAI_IMAGE_DEPLOYMENT_NAME=dall-e-3
AZURE_OPENAI_IMAGE_API_VERSION=2024-04-01-preview

# Server Configuration
PORT=8443
NODE_ENV=development

# SSL Configuration
SSL_ENABLED=true
SSL_CERT_PATH=ssl/cert.pem
SSL_KEY_PATH=ssl/key.pem

# Security Configuration
API_RATE_LIMIT_MAX=100
API_RATE_LIMIT_WINDOW_MS=900000
CORS_ORIGIN=https://localhost:8443
